{% extends "base.jinja" %}
{% set active_page = "register" %}
{% set custom_css = ["/static/login_or_register.css", "/static/register.css"] %}
{% set mid_panel_col = "col-md-4 col-md-offset-4" %}
{% block div %}
    <form class="form-signin" method="post">
        <h2 class="form-signin-heading">Register:</h2>
        <label for="inputEmail" class="sr-only">Email Address</label>
        <input name="email" type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email address" required autofocus/>
        <label for="inputPassword" class="sr-only">Password</label>
        <input name="password" type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Password" required/>
        <label for="verifyPassword" class="sr-only">Repeat Password</label>
        <input name="vpassword" type="password" id="verifyPassword" name="verifyPassword" class="form-control" placeholder="Repeat Password" required/>
        <input class="btn btn-sm btn-primary btn-block" type="submit" />
    </form>
{% endblock %}
